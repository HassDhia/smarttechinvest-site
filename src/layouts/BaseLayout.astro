---
// BaseLayout.astro - Main site layout component
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Smart Tech Investments',
  description = 'Investing in the future of technology',
  currentPage = 'home'
} = Astro.props;
const currentPath = Astro.request.url?.pathname || '/';
const segments = currentPath.split('/').filter(Boolean);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
  <meta name="og:title" content={title} />
  <meta name="og:description" content={description} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="theme-color" content="#0f2544" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #0f2544;
      --primary-600: #163b6b;
      --accent: #3b82f6;
      --background: #ffffff;
      --surface: #ffffff;
      --text: #1f2937;
      --muted: #6b7280;
      --border: #e6eefc;
      --radius: 12px;
      --shadow: 0 8px 24px rgba(15,37,68,0.08);
    }
    body {
      margin: 0;
      font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.6;
      color: var(--text);
      background: var(--background);
    }
    h1, h2, h3 { line-height: 1.2; letter-spacing: -0.01em; }
    h1 { font-size: clamp(2rem, 3vw, 2.5rem); margin: 0 0 0.75rem; }
    h2 { font-size: clamp(1.5rem, 2.5vw, 1.75rem); margin: 0 0 0.75rem; }
    h3 { font-size: 1.25rem; margin: 0 0 0.5rem; }
    a { color: var(--primary); text-underline-offset: 3px; }
    a:focus-visible, .btn:focus-visible { outline: 2px solid var(--accent); outline-offset: 2px; }

    /* Layout shell */
    .app-shell { display: grid; grid-template-columns: 260px 1fr; min-height: 100vh; }
    .app-nav { border-right: 1px solid var(--border); position: sticky; top: 0; height: 100vh; background: var(--surface); }
    .app-main { min-width: 0; }
    .floating-cta { position: fixed; right: 24px; bottom: 24px; background: var(--primary); color: #fff; text-decoration: none; padding: 0.75rem 1rem; border-radius: 999px; font-weight: 600; box-shadow: 0 8px 24px rgba(15,37,68,0.25); }

    /* Utilities */
    .wrap { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }
    .section { margin: 3.5rem 0; }
    .btn { display: inline-block; background: var(--primary); color: #fff; text-decoration: none; padding: 0.7rem 1.1rem; border-radius: 10px; font-weight: 700; box-shadow: var(--shadow); transition: transform .15s ease; }
    .divide { border-top: 1px solid var(--border); margin: 2.5rem 0; }
    .pad-y { padding: 2rem 0; }
    /* Breadcrumbs */
    .breadcrumbs { display: flex; align-items: center; gap: 0.5rem; color: var(--muted); font-size: 0.95rem; padding: 0.75rem 0; }
    .breadcrumbs a { color: inherit; text-decoration: none; }
    .breadcrumbs a:hover { text-decoration: underline; }
    .crumb-sep { opacity: 0.6; }
    .btn:hover { transform: translateY(-1px); }
    .chip { display: inline-block; background: #f5f7fb; border: 1px solid var(--border); color: var(--primary); padding: 0.35rem 0.6rem; border-radius: 999px; font-weight: 600; font-size: .85rem; }

    /* Dark scheme */
    @media (prefers-color-scheme: dark) {
      :root { --background: #0b1220; --surface: #0d1326; --text: #e5e7eb; --muted: #acb1bd; --border: #1f2a44; --primary: #9cc4ff; --primary-600: #6ba3f5; }
      .app-nav { border-right-color: var(--border); }
      .btn { box-shadow: none; }
    }
    @media (max-width: 900px) {
      .app-shell { grid-template-columns: 1fr; }
      .app-nav { position: relative; height: auto; border-right: none; border-bottom: 1px solid var(--border); }
    }
  </style>
</head>
<body>
  <div class="app-shell">
    <aside class="app-nav">
      <Nav currentPage={currentPage} />
    </aside>
    <main class="app-main">
      <nav class="breadcrumbs wrap" aria-label="Breadcrumbs">
        <a href="/">Home</a>
        {segments.map((seg, i) => (
          <>
            <span class="crumb-sep">/</span>
            <a href={`/${segments.slice(0, i + 1).join('/')}`}>{seg}</a>
          </>
        ))}
      </nav>
      <slot />
      <Footer />
    </main>
  </div>
  {currentPage !== 'schedule' && (
    <a href="/schedule" class="floating-cta" aria-label="Book a clarity call">Book Call</a>
  )}
</body>
</html>
