---
// work/[slug].astro - Individual project page
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import KPIStat from '../../components/KPIStat.astro';

export const prerender = true;

export async function getStaticPaths() {
  const work = await getCollection('work');
  return work.map((entry) => ({ params: { slug: entry.slug } }));
}

const { slug } = Astro.params;
const allWork = await getCollection('work');
const entry = allWork.find((w) => w.slug === slug);
const { Content } = await entry.render();
const data = entry.data;
---

<BaseLayout 
  title={`${data.title} | Smart Tech Investments`} 
  description={data.excerpt}
  currentPage="work"
>
  <article class="project-container">
    <header class="project-header">
      <h1>{data.title}</h1>
      <div class="kpi-row">
        <KPIStat label="ARR Impact" value={data.arr || '+$1.2M'} />
        <KPIStat label="Margin" value={data.margin || '+8%'} />
        <KPIStat label="Cycle Time" value={data.cycle || '-34%'} />
      </div>
      <div class="project-meta">
        <time datetime={data.date.toISOString()}>
          {data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        {data.tags && (
          <div class="project-tags">
            {data.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      {data.heroImage && (
        <img 
          src={data.heroImage} 
          alt={data.title} 
          class="project-hero-image"
        />
      )}
    </header>

    <div class="project-content">
      <section class="project-section">
        <h2>Overview</h2>
        <Content />
      </section>

      {data.challenge && (
        <section class="project-section">
          <h2>Challenge</h2>
          <p>{data.challenge}</p>
        </section>
      )}

      {data.process && (
        <section class="project-section">
          <h2>Design Process</h2>
          <p>{data.process}</p>
        </section>
      )}

      {data.results && (
        <section class="project-section">
          <h2>Results</h2>
          <p>{data.results}</p>
        </section>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .project-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  .project-header {
    margin-bottom: 2rem;
  }
  .kpi-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 0.75rem; margin-top: 0.75rem; }
  .project-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin: 1rem 0;
    color: var(--secondary);
    font-size: 0.9rem;
  }
  .project-tags {
    display: flex;
    gap: 0.5rem;
  }
  .tag {
    padding: 0.25rem 0.5rem;
    background: #f0f0f0;
    border-radius: 4px;
    font-size: 0.8rem;
  }
  .project-hero-image {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
    margin-top: 1rem;
  }
  .project-content {
    line-height: 1.8;
  }
  .project-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
  .project-section {
    margin: 3rem 0;
  }
  .project-section h2 {
    margin-bottom: 1.5rem;
    color: var(--primary);
  }
</style>
