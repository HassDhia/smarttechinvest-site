---
// 404.astro - Not found page
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
---

<BaseLayout 
  title="Page Not Found | Smart Tech Investments" 
  description="The page you're looking for doesn't exist"
  currentPage="404"
>
  <HeroSection 
    title="404 - Lost in Space?"
    subtitle="The page you're looking for seems to have taken off without us"
  />

  <section class="not-found-container">
    <div class="not-found-content">
      <p>Don't worry, we'll get you back on track:</p>
      <a href="/" class="home-button">Return to Home</a>
    </div>
  </section>
</BaseLayout>

<style>
  .not-found-container {
    max-width: 800px;
    margin: 4rem auto;
    padding: 0 1rem;
    text-align: center;
  }
  .not-found-content {
    margin-top: 2rem;
  }
  .not-found-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--secondary);
  }
  .home-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--primary);
    color: white;
    border-radius: 4px;
    font-size: 1.1rem;
    text-decoration: none;
    transition: background 0.2s ease;
  }
  .home-button:hover {
    background: #0061d5;
  }
</style>
