---
// HeroSection.astro - Page hero banner with animated text
import AnimatedText from './AnimatedText.jsx';

const { 
  title = "Smart Technology Investments |",
  subtitle,
  ctaText,
  ctaLink,
  backgroundIllustration,
  badgeText
} = Astro.props;
---

<section class="hero-container">
  {backgroundIllustration && (
    <img 
      src={backgroundIllustration} 
      alt="" 
      class="hero-bg-illustration"
      loading="lazy"
    />
  )}
  <div class="hero-content">
    {badgeText && <div class="hero-badge">{badgeText}</div>}
    <h1 class="hero-title">
      {title} <AnimatedText />
    </h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    {ctaText && (
      <a href={ctaLink || "#"} class="hero-cta">
        {ctaText}
      </a>
    )}
  </div>
</section>

<style>
  .hero-container {
    padding: 6rem 1rem 4rem 1rem;
    text-align: center;
    background: var(--gradient-hero);
    color: white;
    position: relative;
    overflow: hidden;
  }
  .hero-bg-illustration {
    position: absolute;
    bottom: 0;
    right: 0;
    max-height: 80%;
    opacity: 0.15;
    z-index: 0;
  }
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  .hero-title {
    font-size: 3.25rem;
    margin: 0 0 1rem 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }
  .hero-badge {
    display: inline-block;
    margin-bottom: 0.75rem;
    padding: 0.35rem 0.6rem;
    background: #f5f7fb;
    border: 1px solid rgba(255,255,255,0.25);
    color: #fff;
    border-radius: 999px;
    font-weight: 700;
    backdrop-filter: blur(6px);
  }
  @media (max-width: 640px) {
    .hero-title {
      font-size: 2.25rem;
    }
  }
  .hero-subtitle {
    font-size: 1.25rem;
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }
  .hero-cta {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: white;
    color: #0f2544;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: transform 0.2s;
  }
  .hero-cta:hover {
    transform: translateY(-2px);
  }
  .animated-text {
    display: inline-block;
    animation: fadeIn 0.6s ease;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(4px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
