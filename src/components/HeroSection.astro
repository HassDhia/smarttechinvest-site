---
// HeroSection.astro - Page hero banner with animated text
import AnimatedText from './AnimatedText.jsx';

const { 
  title = "SmartTechInvest's |",
  subtitle,
  ctaText,
  ctaLin,
  backgroundIllustration
} = Astro.props;
---

<section class="hero-container">
  {backgroundIllustration && (
    <img 
      src={backgroundIllustration} 
      alt="" 
      class="hero-bg-illustration"
      loading="lazy"
    />
  )}
  <div class="hero-content">
    <h1 class="hero-title">
    {title} <  AnimatedText phrases={Astro.props.phrases} interval={Astro.props.interval} />
    </h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    {ctaText && (
      <a href={ctaLink || "#"} class="hero-cta">
        {ctaText}
      </a>
    )}
  </div>
</section>

<style>
  .hero-container {
    padding: 4rem 1rem;
    text-align: center;
    background: linear-gradient(135deg, #0070f3 0%, #0061d5 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }
  .hero-bg-illustration {
    position: absolute;
    bottom: 0;
    right: 0;
    max-height: 80%;
    opacity: 0.15;
    z-index: 0;
  }
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  .hero-title {
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }
  .hero-subtitle {
    font-size: 1.25rem;
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }
  .hero-cta {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: white;
    color: #0070f3;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: transform 0.2s;
  }
  .hero-cta:hover {
    transform: translateY(-2px);
  }
</style>
